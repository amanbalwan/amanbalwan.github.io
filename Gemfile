source 'https://rubygems.org'

# Group for Jekyll plugins
group :jekyll_plugins do
  gem 'jekyll', '~> 4.3.4'  # Use the latest stable version of Jekyll
  gem 'github-pages', group: :jekyll_plugins  # Include GitHub Pages gem
  gem 'jekyll-archives', '~> 2.2.1'
  gem 'jekyll-email-protect', '~> 1.1.0'
  gem 'faraday-retry', '~> 2.2.1'  # Specify version
  gem 'jekyll-feed'
  gem 'jekyll-get-json'
  gem 'jekyll-imagemagick'
  gem 'jekyll-jupyter-notebook'
  gem 'jekyll-link-attributes'
  gem 'jekyll-minifier'
  gem 'jekyll-paginate-v2'
  gem 'jekyll-regex-replace'
  gem 'jekyll-scholar'
  gem 'jekyll-sitemap'
  gem 'jekyll-tabs'
  gem 'jekyll-toc'  # Table of contents plugin
  gem 'jekyll-twitter-plugin'
  gem 'jemoji'
  gem 'unicode_utils'
  gem 'webrick', '~> 1.9.0'  # Ensure compatibility for Ruby >= 3.0
end

# Group for other non-Jekyll plugins
group :other_plugins do
  gem 'css_parser', '~> 1.19.1'  # Add version constraints
  gem 'feedjira', '~> 3.2.3'  # Specify version
  gem 'httparty', '~> 0.22.0'  # Specify version
end
